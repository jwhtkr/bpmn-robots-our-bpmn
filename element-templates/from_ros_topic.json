[
  {
    "name" : "String From ROS",
    "id"   : "string_from_ros",
    "type" : "External",
    "appliesTo" :
    [
      "bpmn:Task"
    ],
    "properties" :
    [
      {
        "label"       : "String",
        "type"        : "Hidden",
        "description" : "The string to be received",
        "binding" :
        {
          "name"   : "string",
          "type"   : "camunda:field"
        }
      },
      {
        "label" : "ROS Topic",
        "type"  : "String",
        "description" : "The ROS topic the string will be pulled from",
        "binding" :
        {
          "name" : "ros_topic",
          "type" : "camunda:inputParameter"
        },
        "constraints" :
        {
          "notEmpty" : true
        }
      }
    ]
  }
]
